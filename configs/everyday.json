{
    "dataset": {
        "name":"everyday",
        "root_dir": "/home/shared_data/HPL/everyday_deform/",
        "obj_list": ["Box","Cat","Pillow","Dog","Donut","Doritos","Bottle","Flipflop"],
        "n_points": -1,
        "neigbor_radius": 0.15,
        "neigbor_k":5,
        "sphere_radius":0.05,
        "force_max":10000,
        "graph_method":"knn"
    },
    "visualization": {
        "rigid_radius_contact": 0.1,
        "rigid_radius_deform": 0.01,
        "colors": {
            "contact_rigid": [0, 0, 1],
            "deform_rigid": [1, 1, 0],
            "soft_rest_pcd": [1, 0, 0],
            "soft_def_pcd": [0, 1, 0],
            "lineset": [0.5, 0.5, 0.5],
            "vector": [0, 0, 0]
        }
    },
    "dataloader": {
        "batch_size": 4,
        "shuffle": true
    },
    "training": {
        "n_epochs": 1000,
        "learning_rate": 0.0004,
        "model_save_path": "model.pth",
        "lambda_gradient": 1.0,
        "lambda_deformable": 0.1
    },
    "network": {
        "input_dims": [21, 25],
        "use_mha":true,
        "num_mha_heads": 2,
        "hidden_dim": 256,
        "output_dim": 3,
        "encoder_layers":2,
        "decoder_layers":3,
        "dropout_rate": 0.00,
        "knn_k": 7,
        "backbone": "TAGConv",
        "mode": "res"
    }
}
